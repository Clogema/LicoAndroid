<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="fr.isen.lico.MenuLicoActivity">

    <GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvFun"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLicorne">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivPicolo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/piccolo" />

            <TextView
                android:id="@+id/tvPicolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/picolo"
                android:textAlignment="center"
                android:textColor="@color/textGrey"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivBetsum"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/somme" />

            <TextView
                android:id="@+id/tvBetSum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sum"
                android:textAlignment="center"
                android:textColor="@color/textGrey"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSelfdraw"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/photo" />

            <TextView
                android:id="@+id/tvSelfDraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/selfdraw"
                android:textAlignment="center"
                android:textColor="@color/textGrey"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivHighway"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/highway" />

            <TextView
                android:id="@+id/tvHighway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/highway"
                android:textAlignment="center"
                android:textColor="@color/textGrey"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

    </GridLayout>

    <ImageView
        android:id="@+id/ivLicorne"
        android:layout_width="wrap_content"
        android:layout_height="400px"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/licorne" />

    <TextView
        android:id="@+id/tvFun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/fun"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout3" />

    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/preference" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="34dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/backarrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
